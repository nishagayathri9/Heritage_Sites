{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Interactive line chart showing the number of nominations per year by region, with year filters.",
  "width": 800,
  "height": 400,
  "background": "null",

  "data": {
    "url": "https://raw.githubusercontent.com/nishagayathri9/Heritage_Sites/refs/heads/main/line_chart.csv"
  },

  "transform": [
    {
      "aggregate": [{"op": "count", "as": "Count"}],
      "groupby": ["Nomination Year", "Region"]
    },
    {"filter": "datum['Nomination Year'] >= minYear"},
    {"filter": "datum['Nomination Year'] <= maxYear"}
  ],

  "params": [
    {
      "name": "minYear", "value": 1979,
      "bind": {
        "input": "range",
        "min": 1979,
        "max": 2023,
        "step": 1,
        "name": "Start year:"
      }
    },
    {
      "name": "maxYear", "value": 2024,
      "bind": {
        "input": "range",
        "min": 1980,
        "max": 2024,
        "step": 1,
        "name": "End year:"
      }
    }
  ],

  "encoding": {
    "x": {
      "field": "Nomination Year",
      "type": "ordinal",
      "title": "Year",
      "axis": {"labelColor": "white", "titleColor": "white"}
    },
    "y": {
      "field": "Count",
      "type": "quantitative",
      "title": "Number of Nominations",
      "axis": {"labelColor": "white", "titleColor": "white"}
    },
    "color": {
      "condition": {
        "param": "hover",
        "field": "Region",
        "type": "nominal",
        "legend": {"title": "Region", "labelColor": "white", "titleColor": "white"}
      },
      "value": "grey"
    },
    "opacity": {
      "condition": {"param": "hover", "value": 1},
      "value": 0.2
    },
    "tooltip": [
      {"field": "Nomination Year", "type": "ordinal", "title": "Year"},
      {"field": "Region", "type": "nominal", "title": "Region"},
      {"field": "Count", "type": "quantitative", "title": "Nominations"}
    ]
  },

  "layer": [
    {
      "mark": {
        "type": "line",
        "strokeWidth": 2,
        "point": true
      },
      "params": [
        {
          "name": "hover",
          "select": {
            "type": "point",
            "fields": ["Region"],
            "on": "mouseover",
            "clear": "mouseout"
          }
        }
      ]
    }
  ],

  "config": {
    "view": {"stroke": null},
    "axis": {"tickColor": "white"},
    "legend": {"labelColor": "white", "titleColor": "white"},
    "title": {"color": "white"}
  }
}
