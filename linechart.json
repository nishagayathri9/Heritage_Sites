{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Interactive line chart showing the number of nominations per year by region, with year filters.",
  "width": 800,
  "height": 400,
  "background": "null",

  "data": {
    "url": "https://raw.githubusercontent.com/nishagayathri9/Heritage_Sites/refs/heads/main/line_chart.csv"
  },

  "transform": [
    {
      "aggregate": [{"op": "count", "as": "Count"}],
      "groupby": ["Nomination Year", "Region"]
    },
    {"filter": "datum['Nomination Year'] >= minYear"},
    {"filter": "datum['Nomination Year'] <= maxYear"}
  ],

  "params": [
    {
      "name": "minYear",
      "value": 1979,
      "bind": {
        "input": "range",
        "min": 1979,
        "max": 2023,
        "step": 1,
        "name": "Start year:"
      }
    },
    {
      "name": "maxYear",
      "value": 2024,
      "bind": {
        "input": "range",
        "min": 1980,
        "max": 2024,
        "step": 1,
        "name": "End year:"
      }
    }
  ],

  "encoding": {
    "x": {
      "field": "Nomination Year",
      "type": "ordinal",
      "title": "Year",
      "axis": {
        "labelColor": "white",
        "titleColor": "white",
        "labelFontSize": 14,
        "titleFontSize": 16,
        "titlePadding": 10   // Added titlePadding here
      }
    },
    "y": {
      "field": "Count",
      "type": "quantitative",
      "title": "Number of Nominations",
      "axis": {
        "labelColor": "white",
        "titleColor": "white",
        "labelFontSize": 14,
        "titleFontSize": 16,
        "titlePadding": 10   // And here as well
      }
    },
    "color": {
      "field": "Region",
      "type": "nominal",
      "scale": {"scheme": "accent"},
      "legend": {
        "title": "Region",
        "labelColor": "white",
        "titleColor": "white",
        "labelFontSize": 14,
        "titleFontSize": 16
      }
    },
    "opacity": {
      "condition": {"param": "hover", "value": 1},
      "value": 0.2
    },
    "tooltip": [
      {"field": "Nomination Year", "type": "ordinal", "title": "Year"},
      {"field": "Region", "type": "nominal", "title": "Region"},
      {"field": "Count", "type": "quantitative", "title": "Nominations"}
    ]
  },

  "layer": [
    {
      "mark": {
        "type": "line",
        "strokeWidth": 2,
        "point": true
      },
      "params": [
        {
          "name": "hover",
          "select": {
            "type": "point",
            "fields": ["Region"],
            "on": "mouseover",
            "clear": "mouseout"
          }
        }
      ]
    },
    {
      "mark": {
        "type": "text",
        "text": "Rapid EU expansion & cultural preservation efforts",
        "dx": 400,
        "dy": 20,
        "fill": "white",
        "fontSize": 14,
        "fontWeight": "lighter"
      },
      "encoding": {
        "x": {"datum": 2000},
        "y": {"datum": 35}
      }
    }
  ],

  "config": {
    "view": {"stroke": null},
    "axis": {"tickColor": "white", "grid": false},
    "legend": {
      "labelColor": "white",
      "titleColor": "white",
      "labelFontSize": 14,
      "titleFontSize": 16
    },
    "title": {"color": "white"}
  }
}
