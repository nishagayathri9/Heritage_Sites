{
    "$schema": "https://vega.github.io/schema/vega/v5.json",
    "description": "A beeswarm chart using a force-directed layout to group world heritage sites by category.",
    "width": 680,  
    "height": 450,
    "padding": {"left": 50, "right": 260, "top": 60, "bottom": 60},  
    "autosize": "none",
    
    "signals": [
      { "name": "cx", "update": "width / 2" },
      { "name": "cy", "update": "height / 2" },
      { "name": "radius", "value": 7 },
      { "name": "collide", "value": 2 },
      { "name": "gravityX", "value": 0.3 },
      { "name": "gravityY", "value": 0.61 },
      { "name": "static", "value": false }
    ],
    
    "data": [
      {
        "name": "heritage_sites",
        "url": "https://raw.githubusercontent.com/nishagayathri9/Heritage_Sites/main/beeswarm.csv",
        "format": {"type": "csv"}
      }
    ],
    
    "scales": [
      {
        "name": "xscale",
        "type": "band",
        "domain": {"data": "heritage_sites", "field": "category", "sort": true},
        "range": "width"
      },
      {
        "name": "color",
        "type": "ordinal",
        "domain": {"data": "heritage_sites", "field": "region_en"},
        "range": ["#fbb4ae", "#b3cde3", "#ccebc5", "#decbe4", "#fed9a6", "#ffffcc"]  
      }
    ],
    
    "axes": [
      {
        "orient": "bottom", 
        "scale": "xscale", 
        "title": "Categories", 
        "labelFontSize": 14,
        "titleFontSize": 16,
        "titlePadding": 11
      }
    ],
    
    "marks": [
      {
        "name": "nodes",
        "type": "symbol",
        "from": {"data": "heritage_sites"},
        "encode": {
          "enter": {
            "fill": {"scale": "color", "field": "region_en"},
            "xfocus": {"scale": "xscale", "field": "category", "band": 0.5},
            "yfocus": {"signal": "cy"},
            "tooltip": {
              "signal": "{'Name': datum.name, 'Category': datum.category, 'Region': datum.region_en, 'Year Inscribed': datum.year_inscribed}"
            }
          },
          "update": {
            "size": {"signal": "pow(2 * radius, 2)"},
            "stroke": {"value": "white"},
            "strokeWidth": {"value": 1},
            "zindex": {"value": 0}
          },
          "hover": {
            "stroke": {"value": "purple"},
            "strokeWidth": {"value": 3},
            "zindex": {"value": 1}
          }
        },
        "transform": [
          {
            "type": "force",
            "iterations": 300,
            "static": {"signal": "static"},
            "forces": [
              {"force": "collide", "iterations": {"signal": "collide"}, "radius": {"signal": "radius"}},
              {"force": "x", "x": "xfocus", "strength": {"signal": "gravityX"}},
              {"force": "y", "y": "yfocus", "strength": {"signal": "gravityY"}}
            ]
          }
        ]
      }
    ],
    
    "legends": [
      {
        "fill": "color",
        "title": "Region",
        "orient": "right",  
        "titleFontSize": 13,  
        "labelFontSize": 11,  
        "labelLimit": 300,  
        "offset": 0  
      }
    ],
    
    "title": {
      "text": "World Heritage Sites Grouped by Category",
      "fontSize": 21,  
      "anchor": "middle",
      "offset": 20
    }
  }
  
