{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 350,
  "height": 350,
  "background": "null",
  "data": {
    "url": "https://raw.githubusercontent.com/nishagayathri9/Heritage_Sites/main/scatter_data.csv",
    "format": {
      "type": "csv"
    }
  },
  "params": [
    {
      "name": "region_select",
      "value": "Europe",
      "bind": {
        "input": "select",
        "options": ["Asia", "Europe"],
        "name": "Select a Region  "
      }
    }
  ],
  "transform": [
    {
      "filter": "(datum.region == region_select)"
    }
  ],
  "layer": [
    {
      "mark": {
        "type": "arc",
        "innerRadius": 50,
        "stroke": "slategrey"
      },
      "encoding": {
        "theta": {
          "field": "percentage_of_gdp",
          "type": "quantitative",
          "stack": true
        },
        "radius": {
          "field": "percentage_of_gdp",
          "scale": {
            "type": "sqrt",
            "zero": true,
            "rangeMin": 50
          }
        },
        "color": {
          "condition": {
            "test": "datum.percentage_of_gdp > 2.5",
            "field": "country",
            "type": "nominal",
            "scale": {
              "range": [
                "#CD5C5C",
                "#4682B4",
                "#008080",
                "#DDA0DD",
                "#FFDAB9",
                "#F08080",
                "#7B68EE",
                "#9ACD32",
                "#C71585",
                "#7B68EE",
                "#FF1493",
                "#5F9EA0",
                "#66CDAA",
                "#C71585",
                "#B0C4DE",
                "#BC8F8F",
                "#C71585"
              ]
            },
            "legend": null
          },
          "value": "lightgray"
        },
        "tooltip": [
          {
            "field": "country",
            "type": "nominal",
            "title": "Country"
          },
          {
            "field": "percentage_of_gdp",
            "type": "quantitative",
            "title": "Percentage of GDP"
          },
          {
            "field": "Passport Score",
            "type": "quantitative",
            "title": "Passport Score"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "center",
        "baseline": "middle",
        "fontSize": 11.2,
        "fontWeight": "normal",
        "fill": "white",
        "radius": 95
      },
      "encoding": {
        "text": {
          "condition": {
            "test": "datum.percentage_of_gdp > 2.5",
            "field": "country",
            "type": "nominal"
          }
        },
        "theta": {
          "field": "percentage_of_gdp",
          "type": "quantitative",
          "stack": true
        }
      }
    }
  ]
}
