{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "A simple radial chart with embedded data and conditional colors.",
  "title": {
    "text": "Contribution of Tourism to GDP by Region",
    "anchor": "middle",
    "fontSize": 20,
    "offset": 20
  },
  "width": 900,
  "height": 500,
  "data": {
    "url": "https://raw.githubusercontent.com/nishagayathri9/Heritage_Sites/main/scatter_data.csv",
    "format": {
      "type": "csv"
    }
  },
  "layer": [
    {
      "mark": {
        "type": "arc",
        "innerRadius": 50,  
        "stroke": "#fff"
      },
      "encoding": {
        "theta": {
          "field": "percentage_of_gdp",
          "type": "quantitative",
          "stack": true
        },
        "radius": {
          "field": "percentage_of_gdp",
          "scale": {
            "type": "sqrt",
            "zero": true,
            "rangeMin": 50
          }
        },
        "color": {
          "condition": {
            "test": "datum.percentage_of_gdp > 2.5",
            "field": "country",
            "legend": null,
            "type": "nominal",
            "scale": {
              "scheme": "tableau20"
            }
          },
          "value": "lightgray"
        },
        "tooltip": [
          {
            "field": "country",
            "type": "nominal",
            "title": "Country"
          },
          {
            "field": "percentage_of_gdp",
            "type": "quantitative",
            "title": "Percentage of GDP"
          },
          {
            "field": "Passport Score",
            "type": "quantitative",
            "title": "Passport Score"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",  // Add text mark for labels
        "align": "center",
        "baseline": "middle",
        "radius": 120,  // Adjust the distance of the label from the center
        "fontSize": 12,
        "fontWeight": "lighter"
      },
      "encoding": {
        "text": {
          "condition": {
            "test": "datum.percentage_of_gdp > 2.5",
            "field": "country",
            "type": "nominal"
          }
        },
        "theta": {
          "field": "percentage_of_gdp",
          "type": "quantitative",
          "stack": true
        }
      }
    },
    {
      "layer": [
        {
          "mark": {
            "type": "text",
            "fontSize": 15,
            "fontWeight": 100
          },
          "encoding": {
            "text": {
              "value": "Croatia has over 1,000 islands!"
            },
            "x": {"value": 765},
            "y": {"value": 275} 
          },
          "transform": [
            {
              "filter": "region_select == 'Europe'"
            }
          ]
        }
      ]
    }
  ],
  "params": [
    {
      "name": "region_select",
      "value": "Europe",
      "bind": {
        "input": "select",
        "options": ["Asia", "Europe"],
        "name": "Select a Region   "
      }
    }
  ],
  "transform": [
    {
      "filter": "(datum.region == region_select)"
    }
  ]
}
