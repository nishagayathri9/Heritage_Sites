{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 600,
  "height": 460,
  "background": "#222222",
  "data": {
    "url": "https://raw.githubusercontent.com/nishagayathri9/Heritage_Sites/main/scatter_data.csv",
    "format": {
      "type": "csv"
    }
  },
  "params": [
    {
      "name": "region_select",
      "value": "Europe",
      "bind": {
        "input": "select",
        "options": ["Asia", "Europe"],
        "name": "Select a Region  "
      }
    }
  ],
  "transform": [
    {
      "filter": "(datum.region == region_select)"
    }
  ],
  "layer": [
    {
      "mark": {
        "type": "arc",
        "innerRadius": 50,
        "stroke": "#fff"
      },
      "encoding": {
        "theta": {
          "field": "percentage_of_gdp",
          "type": "quantitative",
          "stack": true
        },
        "radius": {
          "field": "percentage_of_gdp",
          "scale": {
            "type": "sqrt",
            "zero": true,
            "rangeMin": 50
          }
        },
        "color": {
          "condition": {
            "test": "datum.percentage_of_gdp > 2.5",
            "field": "country",
            "legend": null,
            "type": "nominal",
            "scale": {
              "scheme": "category20b"
            }
          },
          "value": "lightgray"
        },
        "tooltip": [
          {
            "field": "country",
            "type": "nominal",
            "title": "Country"
          },
          {
            "field": "percentage_of_gdp",
            "type": "quantitative",
            "title": "Percentage of GDP"
          },
          {
            "field": "Passport Score",
            "type": "quantitative",
            "title": "Passport Score"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "center",
        "baseline": "middle",
        "fontSize": 12,
        "fontWeight": "normal",
        "fill": "white",
        "radius": 80
      },
      "encoding": {
        "text": {
          "condition": {
            "test": "datum.percentage_of_gdp > 2.5",
            "field": "country",
            "type": "nominal"
          }
        },
        "theta": {
          "field": "percentage_of_gdp",
          "type": "quantitative",
          "stack": true
        }
      }
    }
  ]
}
