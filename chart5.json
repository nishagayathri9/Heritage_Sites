{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Distribution of Categories and Ratings",
    "anchor": "middle"
  },
  "width": 400,
  "height": 80,
  "data": {
    "url": "https://raw.githubusercontent.com/nishagayathri9/Heritage_Sites/main/beeswarm.csv",
    "format": {"type": "csv"}
  },
  "mark": "area",
  "transform": [
    {
      "density": "Rating",
      "groupby": ["category"],
      "extent": [0, 5]
    }
  ],
  "encoding": {
    "x": {
      "field": "value",
      "type": "quantitative",
      "title": "Rating"
    },
    "y": {
      "field": "density",
      "type": "quantitative",
      "stack": "zero",
      "axis": {
        "title": null,
        "labelExpr": "datum.label === 'Cultural' || datum.label === 'Natural' ? '' : datum.label"  // Remove title for 1st and 3rd row
      }
    },
    "row": {
      "field": "category",
      "title": "Category"
    },
    "color": {
      "field": "category",
      "type": "nominal",
      "scale": {
        "range": ["#F7AEF8", "#B388EB", "#8093F1"]
      },
      "legend": null
    }
  }
}
