{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "autosize": {
    "type": "fit",
    "contains": "padding"
  },
  "background": "null",
  "data": {
    "url": "https://raw.githubusercontent.com/nishagayathri9/Heritage_Sites/main/beeswarm.csv",
    "format": {"type": "csv"}
  },
  "mark": "area",
  "transform": [
    {
      "density": "Rating",
      "groupby": ["category"],
      "extent": [0, 5]
    }
  ],
  "encoding": {
    "x": {
      "field": "value",
      "type": "quantitative",
      "title": "Rating",
      "axis": {
        "labelColor": "white",
        "titleColor": "white",
        "tickColor": "white",
        "grid": false  
      }
    },
    "y": {
      "field": "density",
      "type": "quantitative",
      "stack": "zero",
      "axis": {
        "labelColor": "white",
        "titleColor": "white",
        "grid": false  
      }
    },
    "color": {
      "field": "category",
      "type": "nominal",
      "scale": {
        "range": ["#E27396","#ea9ab2", "#EFCFE3"]
      },
      "title": "Category",
      "legend": {
        "labelColor": "white",
        "titleColor": "white"
      }
    }
  }
}
